---
layout: base
---

<header class="section spot-color-secondary ">
  <div class="section__inner bg-pattern">
    <div class="wrapper flow region ">
      <h1 class="text-center text-light-glare ">
        Handcrafted
        <span class="gradient-text"
          >accessible</span
          ></span
        >
        and <span class="gradient-text">performant</span> websites for everyone
      </h1>
    </div>
  </div>
  {% include "svg/divider-waves.svg" %}
</header>

<article class="region">
  <div class="wrapper flow prose text-step-2 italic max-md:text-center">
    {{ content | safe }}
  </div>
</article>

<article class="region" style="--region-space-top: var(--space-s)">
  <div class="wrapper flow prose">
    <h2 class="text-center uppercase tracking-wide">{{ blog.title }}</h2>
    <!-- blog intro text is optional. -->
    {% if blog.intro %}
    <p>{{ blog.intro }}</p>
    {% endif %}
  </div>
  <!-- TODO: duplicate of partials/blog.njk -->

  <ul class="wrapper grid mt-l-xl" role="list" data-rows="masonry" data-layout="50-50">
    {% for post in collections.posts %}

    <li class="card flow overflow-hidden">
      <h3>
        {{ post.data.title }}
      </h3>
      <p>{{ post.data.description }}</p>
      <div class="flex gap-xs font-mono text-primary">
        {% if post.data.link %}<a href="{{ post.data.link }}">View the live site</a>{%
        endif %} {% if post.data.repo %}<a href="{{ post.data.repo }}">View the code</a>{%
        endif %}
      </div>
    </li>

    {% endfor %}
  </ul>
</article>
